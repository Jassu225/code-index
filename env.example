# GCP Project Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Firestore Configuration
FIRESTORE_COLLECTION_PREFIX=code_index
FIRESTORE_DATABASE_ID=  # Optional: leave empty for default database

# Cloud Tasks Configuration
CLOUD_TASKS_QUEUE_LOCATION=us-central1
CLOUD_TASKS_QUEUE_NAME=code-index-processing

# Authentication
USE_APPLICATION_DEFAULT_CREDENTIALS=true
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json  # Only if not using ADC

# Processing Configuration
MAX_CONCURRENT_FILES=10
FILE_PROCESSING_TIMEOUT=300
FIRESTORE_BATCH_SIZE=500

# API Configuration
DEBUG=false
CORS_ORIGINS=["*"]  # Configure appropriately for production
API_RATE_LIMIT=1000
